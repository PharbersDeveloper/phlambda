{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "lib": [
            "es7"
        ],
        "types": [
            "jest"
        ],
        "target": "es6",
        "skipLibCheck": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "keyofStringsOnly": true,
        "paths": {
            "*": [
                "node_modules/*"
            ],
            "ramda": [
                "location-of-types/npm-ramda-package/index"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
