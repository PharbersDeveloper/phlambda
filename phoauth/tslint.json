{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended"],
    "jsRules": {},
    "rules": {
        "no-console": false,
        "trailing-comma": [false],
        "member-access": [true, "no-public"],
        "no-bitwise": false,
        "prefer-const": false,
        "semicolon": { "options": ["never"] },
//        "indent": [true, "spaces", 4],
        "object-literal-sort-keys": false
    },
    "rulesDirectory": []
}
