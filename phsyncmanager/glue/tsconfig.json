{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "lib": [
            "es7"
        ],
        "target": "es2020",
        "skipLibCheck": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "..",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "keyofStringsOnly": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
